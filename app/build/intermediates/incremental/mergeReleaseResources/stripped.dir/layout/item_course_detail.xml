<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/item_c_bg"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="课程"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_course_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="课号" />


    <TextView
        android:id="@+id/dialog_classroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="教室" />

    <TextView
        android:id="@+id/dialog_course_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="时间" />

    <TextView
        android:id="@+id/dialog_course_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="周次" />

    <TextView
        android:id="@+id/dialog_course_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="教师" />

    <TextView
        android:id="@+id/dialog_course_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="性质" />

</LinearLayout>
</FrameLayout>